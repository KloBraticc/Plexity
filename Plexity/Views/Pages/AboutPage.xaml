<Page
    x:Class="Plexity.Views.Pages.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Plexity.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="AboutPage"
    d:DesignHeight="550"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="#CC378FFF" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#CC7FB7FF" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>


    <DockPanel Margin="0" LastChildFill="True">
        <StackPanel
            Margin="0,0,0,10"
            DockPanel.Dock="Top"
            SnapsToDevicePixels="True">
            <TextBlock
                FontSize="14"
                FontWeight="Medium"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Text="Info" />
            <TextBlock
                Margin="0,3,0,0"
                FontSize="14"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Text="{Binding InstalledDate, StringFormat=Installed: {0}}" />
            <TextBlock
                FontSize="14"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Text="{Binding Version, StringFormat=Version: {0}  |  Developed by Plexity Team}" />
        </StackPanel>

        <!--  Image and Button container docked top  -->
        <StackPanel
            Margin="0,0,0,20"
            HorizontalAlignment="Left"
            DockPanel.Dock="Top"
            Orientation="Horizontal">
            <Image
                Width="280"
                Height="182"
                Margin="0,0,20,0"
                CacheMode="BitmapCache"
                SnapsToDevicePixels="True"
                Source="/Assets/wpfui-icon-1024.png"
                Stretch="Uniform" />
            <Button
                Width="224"
                Height="40"
                Margin="25,125,0,0"
                VerticalAlignment="Center"
                Content="Discord Server"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
            <Button
                Width="224"
                Height="40"
                Margin="8,125,0,0"
                VerticalAlignment="Center"
                Content="Report A Issue"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
        </StackPanel>

        <!--  Main scrollable content fills remaining space  -->
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <Grid Margin="0">
                <!--  Your existing Grid content here  -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Coders Section  -->
                <ui:CardExpander
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    VerticalAlignment="Top"
                    Background="#0DB3B3B3"
                    IsExpanded="True"
                    Opacity="0.99"
                    SnapsToDevicePixels="True">
                    <ui:CardExpander.Header>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="Coders" />
                    </ui:CardExpander.Header>
                    <StackPanel Margin="10,5,10,10">
                        <TextBlock
                            Margin="0,0,0,5"
                            FontSize="14"
                            Foreground="#CCFFFFFF">
                            <Hyperlink NavigateUri="https://www.youtube.com/@TheBratic" RequestNavigate="Hyperlink_RequestNavigate">
                                Bratic (Main-Coder)
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock FontSize="14" Foreground="#CCFFFFFF">
                            <Hyperlink NavigateUri="https://github.com/midaskira" RequestNavigate="Hyperlink_RequestNavigate">
                                Midas_kira (Co-Coder)
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock FontSize="15" Foreground="#CCFFFFFF">

                            <Hyperlink NavigateUri="https://github.com/Luc6i" RequestNavigate="Hyperlink_RequestNavigate">
                                Luc6i (Co-Coder)
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </ui:CardExpander>

                <!--  Contribution Section  -->
                <ui:CardExpander
                    Grid.Row="0"
                    Grid.Column="1"
                    VerticalAlignment="Top"
                    Background="#0DB3B3B3"
                    IsExpanded="True"
                    Opacity="0.99"
                    SnapsToDevicePixels="True">
                    <ui:CardExpander.Header>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="Contribution" />
                    </ui:CardExpander.Header>
                    <StackPanel Margin="10,5,10,10">
                        <TextBlock
                            Margin="0,0,0,5"
                            FontSize="14"
                            Foreground="#CCFFFFFF">
                            <Hyperlink NavigateUri="https://www.youtube.com/@stoofis" RequestNavigate="Hyperlink_RequestNavigate">
                                Stoof
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock
                            Margin="0,0,0,5"
                            FontSize="14"
                            Foreground="#CCFFFFFF">
                            <Hyperlink NavigateUri="https://www.discord.com/users/1272494435690610800" RequestNavigate="Hyperlink_RequestNavigate">
                                5070
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock FontSize="14" Foreground="#CCFFFFFF">
                            <Hyperlink NavigateUri="https://www.discord.com/users/1211640594082832404" RequestNavigate="Hyperlink_RequestNavigate">
                                Zx_cifer
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock FontSize="14" Foreground="#CCFFFFFF">
                            <Hyperlink NavigateUri="https://7bt.vercel.app" RequestNavigate="Hyperlink_RequestNavigate">
                                7bt
                            </Hyperlink>
                        </TextBlock>
                        <TextBlock FontSize="14" Foreground="#CCFFFFFF">
                            <Hyperlink NavigateUri="https://guns.lol/realakhil" RequestNavigate="Hyperlink_RequestNavigate">
                                A.k.h.i.l.e.s.h
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>
                </ui:CardExpander>

            </Grid>
        </ScrollViewer>
    </DockPanel>
</Page>
