<Page
    x:Class="Plexity.Views.Pages.LaunchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Plexity.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="LaunchPage"
    mc:Ignorable="d"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    d:DataContext="{d:DesignInstance Type=local:LaunchPageViewModel, IsDesignTimeCreatable=True}"
    d:DesignHeight="600"
    d:DesignWidth="900">

    <Page.Resources>
        <local:ProgressToWidthConverter x:Key="ProgressToWidthConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- ProgressBar Style -->
        <Style x:Key="RoundedProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Background" Value="#333" />
            <Setter Property="Foreground" Value="#2196F3" />
            <Setter Property="Height" Value="12" />
            <Setter Property="Width" Value="500" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid SnapsToDevicePixels="True"
                              Height="{TemplateBinding Height}"
                              Width="{TemplateBinding Width}">
                            <Border x:Name="PART_Track"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    SnapsToDevicePixels="True">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="3" ShadowDepth="0" Color="#22000000" />
                                </Border.Effect>
                            </Border>

                            <Border x:Name="PART_Indicator"
                                    Background="{TemplateBinding Foreground}"
                                    CornerRadius="6"
                                    HorizontalAlignment="Left"
                                    SnapsToDevicePixels="True">
                                <Border.Width>
                                    <MultiBinding Converter="{StaticResource ProgressToWidthConverter}">
                                        <Binding Path="Value" RelativeSource="{RelativeSource TemplatedParent}" />
                                        <Binding Path="Maximum" RelativeSource="{RelativeSource TemplatedParent}" />
                                        <Binding Path="ActualWidth" RelativeSource="{RelativeSource TemplatedParent}" />
                                    </MultiBinding>
                                </Border.Width>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButtonStyle">
            <Setter Property="Background" Value="#2196F3" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="6,3" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Width" Value="250" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#888" />
                                <Setter Property="Foreground" Value="#CCC" />
                                <Setter Property="Cursor" Value="Arrow" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Debug log or Main content in row 0 -->
        <ScrollViewer x:Name="DebugLogScrollViewer"
                      Grid.Row="0"
                      Visibility="Collapsed"
                      VerticalScrollBarVisibility="Auto"
                      Margin="10"
                      Background="#222"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Height="380"
                      Width="850"
                      Grid.ZIndex="999">
            <TextBlock x:Name="DebugLogTextBlock"
                       Text="{Binding DebugLogText}"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                       Margin="0,7,0,9"
                       FontSize="14"
                       IsHitTestVisible="True"
                       TextWrapping="Wrap" />
        </ScrollViewer>

        <StackPanel x:Name="MainContentPanel"
                    Grid.Row="0"
                    Visibility="Visible"
                    Margin="0,105,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Width="520"
                    MaxWidth="520">

            <Image Source="/Assets/wpfui-icon-1024.png"
                   Height="147"
                   Stretch="Uniform"
                   SnapsToDevicePixels="True"
                   CacheMode="BitmapCache" />

            <TextBlock x:Name="LoadingMessage"
                       Text="{Binding LoadingMessage}"
                       FontSize="18"
                       Margin="0,7,0,9"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

            <ProgressBar
                Minimum="0"
                Style="{StaticResource RoundedProgressBarStyle}"
                Maximum="{Binding ProgressMaximum}"
                Value="{Binding ProgressValue}"
                FlowDirection="{Binding ProgressBarFlowDirection}"
                IsIndeterminate="{Binding ProgressIndeterminate}"
                Height="9"
                Width="500" />
        </StackPanel>

        <!-- Spacer Row (optional) -->
        <!-- Empty RowDefinition with Height=Auto at Grid.Row=1 -->

        <!-- Cancel Button at bottom (row 2) -->
        <Button Grid.Row="2"
                Width="250"
                Padding="6"
                Margin="0,12,0,12"
                HorizontalAlignment="Center"
                FontSize="16"
                Content="Cancel"
                Command="{Binding CancelInstallCommand}"
                IsEnabled="{Binding CancelEnabled}"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Click="Cancel_Button" />
    </Grid>
</Page>
