<Page
    x:Class="Plexity.Views.Pages.ModsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Plexity.Views.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="ModsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance local:ModsPage, IsDesignTimeCreatable=False}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel Margin="0">

        <TextBlock Margin="0,0,0,10"
                   Text="Manage and apply file mods to the Roblox game client." 
                   FontSize="14" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

        <ui:Card Padding="10" Margin="0,8,0,0" Background="#0D6F6F6F">
            <StackPanel>
                <TextBlock Text="Manage compatibility settings" FontSize="15" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <TextBlock Text="Configure application parameters such as DPI scaling behaviour and fullscreen optimizations."
                           FontSize="12"
                           Margin="0,4,0,10"
                           Foreground="#FF9E9E9E"/>
                <Button Command="{Binding OpenCompatSettingsCommand}"
                Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="📁" Margin="0,0,5,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Open" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </ui:Card>

        <TextBlock
            Margin="0,16,0,0"
            FontSize="17.65"
            FontWeight="Medium"
            Text="Miscellaneous" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

        <ui:Card Padding="10" Margin="0,8,0,0" Background="#0D6F6F6F">
            <StackPanel>
                <TextBlock Text="Use custom cursor" FontSize="15" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <TextBlock Text="Use a custom cursor. Note: Size must be 45x45 or 64x64 depending on your image." 
                           FontSize="12" 
                           Margin="0,4,0,10" 
                           Foreground="#FF9E9E9E"/>
                <Button Command="{Binding AddCustomCursorModCommand}"
                Visibility="{Binding ChooseCustomCursorVisibility, Mode=OneWay}"
                Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="📄" Margin="0,0,5,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Choose Cursor" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding RemoveCustomCursorModCommand}"
                Visibility="{Binding DeleteCustomCursorVisibility, Mode=OneWay}"
                Background="Red" Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Margin="0,5,0,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="🗑️" Margin="0,0,5,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Remove Applied Cursor" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </ui:Card>

        <ui:Card Padding="10" Margin="0,8,0,0" Background="#0D6F6F6F">
            <StackPanel>
                <TextBlock Text="Use custom font" FontSize="15" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <TextBlock Text="Font size can be adjusted in the FFlags tab." 
                           FontSize="12" 
                           Margin="0,4,0,10" 
                           Foreground="#FF9E9E9E"/>
                        <Button Command="{Binding ManageCustomFontCommand}"
                Visibility="{Binding ChooseCustomFontVisibility, Mode=OneWay}"
                Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="📄" Margin="0,0,5,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Choose Font" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
            </StackPanel>
        </Button>

        <Button Command="{Binding ManageCustomFontCommand}"
                Visibility="{Binding DeleteCustomFontVisibility, Mode=OneWay}"
                Background="Red" Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Margin="0,5,0,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="🗑️" Margin="0,0,5,0" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Remove Applied Font" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
            </StackPanel>
        </Button>
            </StackPanel>
        </ui:Card>
    </StackPanel>
</Page>
