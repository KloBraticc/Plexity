<Page
    x:Class="Plexity.Views.Pages.PluginsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Plexity.Views.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="PluginsPage"
    d:DesignHeight="1800"
    d:DesignWidth="800"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0">
            <TextBlock Text="Browse or create your own Plugins to use on Plexity."
                       FontSize="14" TextWrapping="Wrap" Margin="0,0,0,10" />

            <!-- Overlay loading spinner -->
            <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar 
        IsIndeterminate="True" 
        Width="60" Height="40" 
        HorizontalAlignment="Center" 
        VerticalAlignment="Center" 
        Foreground="DodgerBlue" 
        SmallChange="0.8" />
            </Grid>


            <ItemsControl ItemsSource="{Binding Plugins}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <ui:Card Padding="10" Margin="0,8,0,0" Background="#0D6F6F6F">
                            <DockPanel LastChildFill="True" VerticalAlignment="Center">
                                <Image Source="{Binding Icon}" Width="48" Height="48" Margin="0,0,10,0" DockPanel.Dock="Left"/>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontSize="15"/>
                                    <TextBlock Text="{Binding Description}" FontSize="12" Margin="0,4,0,0"
                                               Foreground="#FF9E9E9E" TextWrapping="Wrap" MaxWidth="600"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" Margin="10,0,0,0" VerticalAlignment="Center">
                                    <Button Content="Install"
                                            Width="100"
                                            Click="InstallPlugin_Click" />

                                    <Button Content="Run"
                                            Width="100"
                                            Margin="10,0,0,0"
                                            Click="LaunchPlugin_Click" />

                                    <Button Content="Remove"
                                            Width="120"
                                            Margin="10,0,0,0"
                                            Background="IndianRed"
                                            Foreground="White"
                                            Click="RemovePlugin_Click"/>

                                    <ProgressBar Width="80" Height="20" Margin="10,0,0,0" IsIndeterminate="True"
                                                 Visibility="{Binding IsInstalling, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                    <TextBlock Text="{Binding StatusMessage}" FontSize="12" VerticalAlignment="Center" Margin="10,0,0,0"
                                               Visibility="{Binding StatusMessage}"/>
                                </StackPanel>
                            </DockPanel>
                        </ui:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Refresh Plugins"
                        Width="160" Height="32"
                        Margin="0,0,10,0"
                        Click="RefreshPlugins_Click"/>
                <Button Content="Create Plugins"
                        Width="160" Height="32"
                        Click="CreatePlugins_Click"/>
            </StackPanel>

            <StackPanel x:Name="PluginHostPanel" Margin="0,20,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>
