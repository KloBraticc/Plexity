<Page
    x:Class="Plexity.Views.Pages.TweaksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Plexity.Views.Pages"
    xmlns:helpers="clr-namespace:Plexity.Helpers"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="TweaksPage"
    d:DesignHeight="1500"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance local:TweaksPage, IsDesignTimeCreatable=False}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel Margin="8">
        <TextBlock Text="Use this Page to Tweak your PC to your liking." FontSize="14" TextWrapping="Wrap" />

        <!-- Repeat for each toggle in ViewModel -->
        <ui:Card Padding="10" Margin="0,8,0,0" Background="#0D6F6F6F">
            <StackPanel>
                <TextBlock Text="Launch on Startup" FontSize="15" />
                <TextBlock Text="Starts Plexity when Windows boots." FontSize="12" Margin="0,4,0,10" Foreground="#FF9E9E9E" />
                <ui:ToggleSwitch IsChecked="{Binding LaunchOnStartup, Mode=TwoWay}" />
            </StackPanel>
        </ui:Card>

        <!-- Optimize Performance -->
        <ui:Card Padding="10" Margin="0,8,0,0" Background="#0D6F6F6F">
            <StackPanel>
                <TextBlock Text="Optimize Performance" FontSize="15" />
                <TextBlock Text="Closes unused apps like OneDrive and Cortana." FontSize="12" Margin="0,4,0,10" Foreground="#FF9E9E9E" />
                <ui:ToggleSwitch IsChecked="{Binding OptimizePerformance, Mode=TwoWay}" />
            </StackPanel>
        </ui:Card>

        <!-- Auto Clear Temp -->
        <ui:Card Padding="10" Margin="0,8,0,0" Background="#0D6F6F6F">
            <StackPanel>
                <TextBlock Text="Auto Clear Temp" FontSize="15" />
                <TextBlock Text="Clears temporary files to save space." FontSize="12" Margin="0,4,0,10" Foreground="#FF9E9E9E" />
                <ui:ToggleSwitch IsChecked="{Binding AutoClearTemp, Mode=TwoWay}" />
            </StackPanel>
        </ui:Card>

        <!-- Low Power Mode -->
        <ui:Card Padding="10" Margin="0,8,0,0" Background="#0D6F6F6F">
            <StackPanel>
                <TextBlock Text="Low Power Mode" FontSize="15" />
                <TextBlock Text="Reduces resource usage for better battery life." FontSize="12" Margin="0,4,0,10" Foreground="#FF9E9E9E" />
                <ui:ToggleSwitch IsChecked="{Binding LowPowerMode, Mode=TwoWay}" />
            </StackPanel>
        </ui:Card>

        <!-- Enable Game Mode -->
        <ui:Card Padding="10" Margin="0,8,0,0" Background="#0D6F6F6F">
            <StackPanel>
                <TextBlock Text="Enable Game Mode" FontSize="15" />
                <TextBlock Text="Enables Windows Game Mode for gaming performance." FontSize="12" Margin="0,4,0,10" Foreground="#FF9E9E9E" />
                <ui:ToggleSwitch IsChecked="{Binding EnableGameMode, Mode=TwoWay}" />
            </StackPanel>
        </ui:Card>

        <!-- Mute Discord Mic -->
        <ui:Card Padding="10" Margin="0,8,0,0" Background="#0D6F6F6F">
            <StackPanel>
                <TextBlock Text="Mute Discord Mic" FontSize="15" />
                <TextBlock Text="Automatically mutes your mic on game launch." FontSize="12" Margin="0,4,0,10" Foreground="#FF9E9E9E" />
                <ui:ToggleSwitch IsChecked="{Binding MuteDiscord, Mode=TwoWay}" />
            </StackPanel>
        </ui:Card>

        <!-- Disable Animations -->
        <ui:Card Padding="10" Margin="0,8,0,0" Background="#0D6F6F6F">
            <StackPanel>
                <TextBlock Text="Disable Windows Animations" FontSize="15" />
                <TextBlock Text="Turns off UI animations for better performance." FontSize="12" Margin="0,4,0,10" Foreground="#FF9E9E9E" />
                <ui:ToggleSwitch IsChecked="{Binding DisableAnimations, Mode=TwoWay}" />
            </StackPanel>
        </ui:Card>

        <!-- Network Boost -->
        <ui:Card Padding="10" Margin="0,8,0,0" Background="#0D6F6F6F">
            <StackPanel>
                <TextBlock Text="Enable Network Boost" FontSize="15" />
                <TextBlock Text="Disables Windows Update and background downloads." FontSize="12" Margin="0,4,0,10" Foreground="#FF9E9E9E" />
                <ui:ToggleSwitch IsChecked="{Binding NetworkBoost, Mode=TwoWay}" />
            </StackPanel>
        </ui:Card>

        <!-- Auto Restore Tweaks -->
        <ui:Card Padding="10" Margin="0,8,0,20" Background="#0D6F6F6F">
            <StackPanel>
                <TextBlock Text="Auto Restore Tweaks" FontSize="15" />
                <TextBlock Text="Reverts system changes after gameplay ends." FontSize="12" Margin="0,4,0,10" Foreground="#FF9E9E9E" />
                <ui:ToggleSwitch IsChecked="{Binding AutoRestoreTweaks, Mode=TwoWay}" />
            </StackPanel>
        </ui:Card>
    </StackPanel>
</Page>
