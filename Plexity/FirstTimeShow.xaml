<Window x:Class="Plexity.FirstTimeShow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:Plexity"
        Title="Wecome"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
        ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
        Background="Transparent"
        AllowsTransparency="True" Topmost="True">

    <Window.Resources>
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="#CC378FFF" />
            <Setter Property="TextDecorations" Value="Underline" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#CC7FB7FF" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border Padding="24"
            Background="{ui:ThemeResource ApplicationBackgroundBrush}"
            BorderThickness="1"
            BorderBrush="#FF3A3A3A"
            CornerRadius="6"
            MouseDown="Window_MouseDown" SnapsToDevicePixels="True">

        <StackPanel Width="560" Height="500">

            <!-- ScrollViewer wrapping the main message texts and Roblox Priority section -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Height="446" Margin="0,0,0,0">
                <StackPanel>

                    <!-- Message Text -->
                    <TextBlock x:Name="MessageText"
                               Text="Welcome to Plexity"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               FontSize="16"
                               Margin="0,0,0,1"
                               TextWrapping="Wrap" />

                    <!-- Message Text 2 -->
                    <TextBlock x:Name="MessageText2"
                               Text="Looks like this is one of your first times ever using Plexity, let's get you setup!"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               FontSize="12"
                               Margin="0,0,0,13"
                               TextWrapping="Wrap" />

                    <!-- Message Text 3 -->
                    <TextBlock x:Name="MessageText3"
                               Text="You can setup basic Roblox/Plexity Settings here"
                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                               FontSize="12"
                               Margin="0,0,0,8"
                               TextWrapping="Wrap" />

                    <!-- App Theme Section -->
                    <Border Padding="10" Margin="0,0,0,10" Background="#0D6F6F6F" CornerRadius="5" BorderThickness="1" BorderBrush="#FF171717">
                        <StackPanel>
                            <TextBlock Text="App Theme" FontSize="15" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Choose between Light and Dark themes."
                   FontSize="12"
                   Margin="0,4,0,10"
                   Foreground="#FF9E9E9E"/>
                            <ComboBox Width="200"
                  Padding="8,4"
                  ItemsSource="{Binding ThemeOptions2}"
                  SelectedItem="{Binding CurrentTheme, Mode=TwoWay}"
                  HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>


                    <!-- Roblox Priority Section as Border instead of ui:Card -->
                    <Border Padding="10" Margin="0,0,0,0" Background="#0D6F6F6F" CornerRadius="5" BorderThickness="1" BorderBrush="#FF171717">
                        <StackPanel>
                            <TextBlock Text="Roblox Priority" FontSize="15" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Select the Priority Level to launch Roblox."
                                       FontSize="12"
                                       Margin="0,4,0,10"
                                       Foreground="#FF9E9E9E"/>
                            <ComboBox Width="200"
                                      Padding="8,4"
                                      ItemsSource="{Binding PriorityOptions}"
                                      SelectedItem="{Binding SelectedPriority, Mode=TwoWay}"
                                      HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>

                    <Border Padding="10"
        Margin="0,8,0,0"
        BorderThickness="1"
        BorderBrush="#FF171717"
        Background="#0D6F6F6F"
        CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Open Mods Folder" FontSize="15" Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                            <TextBlock Text="Manage custom Roblox mods here."
                   FontSize="12"
                   Margin="0,4,0,10"
                   Foreground="#FF9E9E9E"/>
                            <Button Margin="0,0,0,0" Click="Button_Click">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="📁" Margin="0,0,5,0" />
                                    <TextBlock Text="Open" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>


                </StackPanel>
            </ScrollViewer>

            <!-- Hyperlink TextBlock -->
            <TextBlock FontSize="14" Foreground="#CCFFFFFF" Margin="0,0,0,3">
                <Hyperlink NavigateUri="https://discord.gg/plexity" RequestNavigate="Hyperlink_RequestNavigate">
                    Need help? Join our Discord.
                </Hyperlink>
            </TextBlock>

            <!-- Spacer to push buttons down -->
            <Border Height="Auto" VerticalAlignment="Stretch"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Button Name="YesButton" Content="Continue" Width="150" Margin="0,0,0,0" Click="Yes_Click" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
