<Window x:Class="Plexity.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Plexity"
        Title="Confirmation"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        Background="Transparent"
        AllowsTransparency="True"
        mc:Ignorable="d">

    <Window.Resources>
        <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="White" />
        <Style TargetType="Hyperlink">
            <Setter Property="Foreground" Value="#CC378FFF" />
            <Setter Property="TextDecorations" Value="Underline" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#CC7FB7FF" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <!-- Define ApplicationBackgroundBrush if needed -->
        <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="#FF202020"/>
    </Window.Resources>

    <Border Padding="24"
            Background="{StaticResource ApplicationBackgroundBrush}"
            BorderThickness="1"
            BorderBrush="#FF3A3A3A"
            CornerRadius="2"
            MouseDown="Window_MouseDown"
            SnapsToDevicePixels="True">

        <StackPanel Width="380" VerticalAlignment="Center">

            <!-- Warning Icon -->
            <Image
                   Source="pack://application:,,,/warning-sign-icon-transparent-background-free-png.png"
                   Width="50" Height="50"
                   Margin="0 0 0 8"
                   HorizontalAlignment="Center"
                   Stretch="Uniform" />

            <!-- Main Message -->
            <TextBlock x:Name="MessageText"
                       Text="Are you sure?"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,4"
                       TextWrapping="Wrap" />

            <!-- Support Hyperlink -->
            <TextBlock FontSize="13"
                       Foreground="#CCFFFFFF"
                       Margin="0,0,0,16"
                       TextWrapping="Wrap">
                <Hyperlink NavigateUri="https://discord.gg/plexity"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    Need help? Join our Discord.
                </Hyperlink>
            </TextBlock>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,0,0,0">
                <Button Name="YesButton"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Content="Yes"
                        Width="80"
                        Click="Yes_Click" Margin="0,0,5,0"/>
                <Button Name="NoButton"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Content="No"
                        Width="80"
                        Click="No_Click" />
                <Button Name="OkButton"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Content="OK"
                        Width="80"
                        Click="Ok_Click"
                        Visibility="Collapsed" />
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
