<Application
    x:Class="Plexity.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Plexity"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
                <!--  Add this line to include the default density  -->
                <ResourceDictionary Source="/Resources/Density/RegularDensity.xaml" />

                <!--  Your modern icons resource dictionary  -->
                <ResourceDictionary Source="/Resources/ModernIcons.xaml" />

                <!--  Other resource dictionaries  -->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
