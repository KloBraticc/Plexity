<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!--  Compact density settings with consistent spacing  -->
    <Thickness x:Key="ControlPageMargin">16,0,16,0</Thickness>
    <Thickness x:Key="NavigationViewContentMargin">16,0,16,0</Thickness>
    <Thickness x:Key="ContentPageMargin">16,0,16,0</Thickness>
    <Thickness x:Key="ControlMargin">0,0,0,6</Thickness>
    <Thickness x:Key="ControlPadding">10,6,10,6</Thickness>
    <Thickness x:Key="TextControlMargin">0,2,0,0</Thickness>
    <Thickness x:Key="TextControlPadding">10,6,10,6</Thickness>
    <Thickness x:Key="ButtonPadding">12,8,12,8</Thickness>
    <Thickness x:Key="CardMargin">0,0,0,8</Thickness>
    <Thickness x:Key="CardPadding">12</Thickness>
    <Thickness x:Key="IconMargin">0,0,8,0</Thickness>
    <Thickness x:Key="ListItemMargin">0,0,0,6</Thickness>
    <Thickness x:Key="ListItemPadding">10,6,10,6</Thickness>
    <Thickness x:Key="HeaderMargin">0,0,0,6</Thickness>

    <!--  Font sizes for compact density  -->
    <sys:Double x:Key="HeaderFontSize">18</sys:Double>
    <sys:Double x:Key="SubheaderFontSize">15</sys:Double>
    <sys:Double x:Key="BodyFontSize">13</sys:Double>
    <sys:Double x:Key="CaptionFontSize">11</sys:Double>

    <!--  Control heights  -->
    <sys:Double x:Key="ControlHeight">32</sys:Double>
    <sys:Double x:Key="ButtonMinWidth">100</sys:Double>
</ResourceDictionary>