<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!--  Regular density settings with balanced spacing  -->
    <Thickness x:Key="ControlPageMargin">20,0,20,0</Thickness>
    <Thickness x:Key="NavigationViewContentMargin">20,0,20,0</Thickness>
    <Thickness x:Key="ContentPageMargin">20,0,20,0</Thickness>
    <Thickness x:Key="ControlMargin">0,0,0,8</Thickness>
    <Thickness x:Key="ControlPadding">12,8,12,8</Thickness>
    <Thickness x:Key="TextControlMargin">0,4,0,0</Thickness>
    <Thickness x:Key="TextControlPadding">12,8,12,8</Thickness>
    <Thickness x:Key="ButtonPadding">16,10,16,10</Thickness>
    <Thickness x:Key="CardMargin">0,0,0,12</Thickness>
    <Thickness x:Key="CardPadding">16</Thickness>
    <Thickness x:Key="IconMargin">0,0,12,0</Thickness>
    <Thickness x:Key="ListItemMargin">0,0,0,8</Thickness>
    <Thickness x:Key="ListItemPadding">12,8,12,8</Thickness>
    <Thickness x:Key="HeaderMargin">0,0,0,8</Thickness>

    <!--  Font sizes for regular density  -->
    <sys:Double x:Key="HeaderFontSize">20</sys:Double>
    <sys:Double x:Key="SubheaderFontSize">16</sys:Double>
    <sys:Double x:Key="BodyFontSize">14</sys:Double>
    <sys:Double x:Key="CaptionFontSize">12</sys:Double>

    <!--  Control heights  -->
    <sys:Double x:Key="ControlHeight">36</sys:Double>
    <sys:Double x:Key="ButtonMinWidth">120</sys:Double>
</ResourceDictionary>