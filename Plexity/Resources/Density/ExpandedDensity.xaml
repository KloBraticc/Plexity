<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!--  Expanded density settings with generous spacing  -->
    <Thickness x:Key="ControlPageMargin">24,0,24,0</Thickness>
    <Thickness x:Key="NavigationViewContentMargin">24,0,24,0</Thickness>
    <Thickness x:Key="ContentPageMargin">24,0,24,0</Thickness>
    <Thickness x:Key="ControlMargin">0,0,0,12</Thickness>
    <Thickness x:Key="ControlPadding">16,12,16,12</Thickness>
    <Thickness x:Key="TextControlMargin">0,6,0,0</Thickness>
    <Thickness x:Key="TextControlPadding">16,12,16,12</Thickness>
    <Thickness x:Key="ButtonPadding">20,12,20,12</Thickness>
    <Thickness x:Key="CardMargin">0,0,0,16</Thickness>
    <Thickness x:Key="CardPadding">20</Thickness>
    <Thickness x:Key="IconMargin">0,0,16,0</Thickness>
    <Thickness x:Key="ListItemMargin">0,0,0,12</Thickness>
    <Thickness x:Key="ListItemPadding">16,12,16,12</Thickness>
    <Thickness x:Key="HeaderMargin">0,0,0,12</Thickness>

    <!--  Font sizes for expanded density  -->
    <sys:Double x:Key="HeaderFontSize">22</sys:Double>
    <sys:Double x:Key="SubheaderFontSize">17</sys:Double>
    <sys:Double x:Key="BodyFontSize">15</sys:Double>
    <sys:Double x:Key="CaptionFontSize">13</sys:Double>

    <!--  Control heights  -->
    <sys:Double x:Key="ControlHeight">40</sys:Double>
    <sys:Double x:Key="ButtonMinWidth">140</sys:Double>
</ResourceDictionary>