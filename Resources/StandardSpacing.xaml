<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Standard margins and spacing -->
    <Thickness x:Key="StandardMargin">12,8,12,8</Thickness>
    <Thickness x:Key="ControlSpacing">0,0,0,16</Thickness>
    <Thickness x:Key="SectionSpacing">0,0,0,24</Thickness>
    <Thickness x:Key="GroupBoxPadding">16</Thickness>
    <Thickness x:Key="CardMargin">0,0,0,16</Thickness>
    <Thickness x:Key="InnerControlMargin">0,8,0,8</Thickness>
    
    <!-- Standard sizes -->
    <System.Double x:Key="StandardControlHeight">32</System.Double>
    <System.Double x:Key="StandardButtonWidth">120</System.Double>
</ResourceDictionary>